@{
    Layout = null;
    Response.Headers["X-UA-Compatible"] = "IE=10";
}
<!doctype html>
<html lang="en" ng-app="kenkenApp">
<head>
    <meta charset="utf-8" />
    <title>My ASP.NET Angular.JS Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <style>
        .topBorder {
            border-top: 1px solid black;
        }
        .topOuterBorder {
            border-top: 2px solid black;
        }
        .rightBorder {
            border-right: 1px solid black;
        }
        .rightOuterBorder {
            border-right: 2px solid black;
        }
        .bottomBorder {
            border-bottom: 1px solid black;
        }
        .bottomOuterBorder {
            border-bottom: 2px solid black;
        }
        .leftBorder {
            border-left: 1px solid black;
        }
        .leftOuterBorder {
            border-left: 2px solid black;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body ng-controller="kenkenApp">
        <div style="width: 800px; margin: auto;">

            <div style="clear:both;" ng-repeat="row in puzzle.Grid.Cells">
                <div style="outline: 1px dotted lightgray; float: left; width: 60px; height: 60px"
                     ng-click="editorEnabled=!editorEnabled"
                     ng-class="getBorderClasses(cell)"
                     ng-repeat="cell in row">
                    <span style="color: gray;"ng-show="cell.showSymbol">{{cell.Group | groupSymbol}}</span>
                    <div ng-hide="editorEnabled">
                        <span style="position: relative; font-size: 52px; left: 13px; bottom: 27px;">{{cell.Value}}</span>
                    </div>
                    <div ng-show="editorEnabled">
                        <input style="font-size: 24px; width: 100%;" ng-model="cell.Value">
                    </div>
                </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/bundles/app")
        @Scripts.Render("~/bundles/bootstrap")
    </body>
</html>
